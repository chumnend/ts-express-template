{
  "name": "ts-express-template",
  "version": "0.1.0",
  "description": "this is a template for a typescript express server",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "prestart": "npm run build",
    "start": "node dist/index.js",
    "dev": "NODE_ENV=development nodemon src/index.ts",
    "lint": "./node_modules/.bin/eslint ./src",
    "lint:fix": "./node_modules/.bin/eslint ./src --fix && ./node_modules/.bin/prettier --write ./src",
    "test": "NODE_ENV=test nyc ./node_modules/.bin/_mocha -r ts-node/register tests/**/*.test.ts --exit"
  },
  "author": "Nicholas Chumney",
  "license": "ISC",
  "dependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "morgan": "^1.10.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@types/chai": "^4.3.4",
    "@types/chai-http": "^4.2.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.3",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "chai": "^4.3.7",
    "chai-http": "^4.3.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.21",
    "nyc": "^15.1.0",
    "prettier": "^2.8.4"
  }
}
